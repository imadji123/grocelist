<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_groceries"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_super_tiny"
    android:layout_marginEnd="@dimen/spacing_tiny"
    android:layout_marginStart="@dimen/spacing_tiny"
    android:layout_marginTop="@dimen/spacing_tiny"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/groceries_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/spacing_super_tiny"
            android:src="@drawable/ic_dots" />

        <View
            android:id="@+id/groceries_status"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_small"
            android:background="@color/material_green_400" />

        <TextView
            android:id="@+id/text_groceries_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_super_tiny"
            android:layout_toLeftOf="@id/groceries_options"
            android:layout_toRightOf="@+id/groceries_status"
            android:ellipsize="end"
            android:maxLines="@integer/single_line"
            android:text="@string/groceries_name"
            android:textColor="@color/material_grey_800"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/text_groceries_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_groceries_name"
            android:layout_marginTop="@dimen/spacing_super_tiny"
            android:layout_toRightOf="@+id/groceries_status"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            android:text="@string/groceries_date"
            android:textColor="@color/material_grey_500"
            android:textSize="@dimen/text_size_smaller" />

        <TextView
            android:id="@+id/text_groceries_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_groceries_name"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_super_tiny"
            android:layout_toRightOf="@+id/text_groceries_date"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="@dimen/spacing_super_tiny"
            android:gravity="center"
            android:text="@string/groceries_time"
            android:textColor="@color/material_grey_500"
            android:textSize="@dimen/text_size_smaller" />

        <TextView
            android:id="@+id/text_groceries_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/groceries_status"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_toRightOf="@id/groceries_status"
            android:drawableLeft="@drawable/ic_check_circle"
            android:drawablePadding="@dimen/spacing_super_tiny"
            android:text="@string/groceries_completed"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>